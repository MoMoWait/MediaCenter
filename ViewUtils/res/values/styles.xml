<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <item name="menu_favrite_tag" type="id"></item>
    <item name="menu_select_index_tag" type="id"></item>

    <style name="ListSettingTextStyle">
        <item name="android:textSize">16px</item>
        <item name="android:textColor">#818b9a</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ListSettingItemTextStyle">
        <item name="android:textSize">24px</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListSettingItemNumStyle">
        <item name="android:textSize">18px</item>
        <item name="android:textColor">@color/file_num_bg</item>
        <item name="android:gravity">center</item>
    </style>

</resources>