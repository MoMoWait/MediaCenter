<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/hourImageUp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_text_up"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/hourText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/video_seek_normal_background"
            android:gravity="center"
            android:text="@string/text_video_time_seek_time_default"
            android:textSize="60sp" />

        <ImageView
            android:id="@+id/hourImageDown1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_text_down"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/hourImageUp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_text_up"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/hourText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:background="@drawable/video_seek_normal_background"
            android:gravity="center"
            android:text="@string/text_video_time_seek_time_default"
            android:textSize="60sp" />

        <ImageView
            android:id="@+id/hourImageDown2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_text_down"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/colon1"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/text_video_time_seek_time_divider"
        android:textSize="60sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/miniteImageUp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_text_up"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/miniteText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/video_seek_normal_background"
            android:gravity="center"
            android:text="@string/text_video_time_seek_time_default"
            android:textSize="60sp" />

        <ImageView
            android:id="@+id/miniteImageDown1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_text_down"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/miniteImageUp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_text_up"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/miniteText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:background="@drawable/video_seek_normal_background"
            android:gravity="center"
            android:text="@string/text_video_time_seek_time_default"
            android:textSize="60sp" />

        <ImageView
            android:id="@+id/miniteImageDown2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_text_down"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/colon2"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/text_video_time_seek_time_divider"
        android:textSize="60sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/secondImageUp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_text_up"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/secondText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:background="@drawable/video_seek_normal_background"
            android:gravity="center"
            android:text="@string/text_video_time_seek_time_default"
            android:textSize="60sp" />

        <ImageView
            android:id="@+id/secondImageDown1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_text_down"
	        android:visibility="invisible"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/secondImageUp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_text_up"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/secondText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:background="@drawable/video_seek_normal_background"
            android:gravity="center"
            android:text="@string/text_video_time_seek_time_default"
            android:textSize="60sp" />

        <ImageView
            android:id="@+id/secondImageDown2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_text_down"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>