<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content" >
    
    <ImageView 
        android:id="@+id/iv_margin_top"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:src="@android:color/transparent" />
    
    <ImageView 
        android:id="@+id/iv_item_content_bg"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_below="@+id/iv_margin_top"
        android:layout_centerHorizontal="true"
        android:src="@drawable/playlist_item_bg" />
    
    <ImageView 
        android:id="@+id/iv_margin_bottom"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_below="@+id/iv_item_content_bg"
        android:src="@android:color/transparent" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >
	    
	    <ImageView 
	        android:id="@+id/playlist_item_palyicon"
	        android:layout_width="32dp"
	        android:layout_height="32dp"
	        android:layout_centerVertical="true"
			android:layout_marginRight="8dp"
	        android:src="@drawable/video_playlist_playicon"
	        android:visibility="gone"/>
	
	    <TextView
	        android:id="@+id/playlist_item_videoname"
	        android:layout_width="248dp"
	        android:layout_height="90dp"
	        android:gravity="left|center_vertical"
	        android:lines="2"
	        android:textColor="#ffffff"
	        android:textSize="22sp" />
	 </LinearLayout>

</RelativeLayout>