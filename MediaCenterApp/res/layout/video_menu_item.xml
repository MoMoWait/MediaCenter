<?xml version="1.0" encoding="utf-8"?>
<!-- 类型 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/typeLayout"
    android:layout_width="258dip"
    android:layout_height="493dip"
    android:orientation="vertical" 
    >

    <TextView
        android:id="@+id/menu_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textColor="#7bbbe8"
        android:textSize="20dp"
        android:gravity="center" />

    <RelativeLayout
        android:id="@+id/rl_menu_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" >
        
        <ImageView
            android:id="@+id/iv_menu_item_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
        	android:layout_marginTop="14dp"
        	android:layout_marginLeft="4dp"
        	android:layout_marginRight="4dp"
            android:src="@drawable/line"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/typeRectBox"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="140dp"
            android:scaleType="fitXY"
            android:src="@drawable/pop_menu_focus_low" />

        <com.rockchips.mediacenter.viewutils.wheelview.WheelView
            android:id="@+id/image_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:focusable="true" 
            />
    </RelativeLayout>

</LinearLayout>